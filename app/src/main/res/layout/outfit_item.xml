<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#b7d8f9"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageButton
        android:id="@+id/deleteOutfit"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="#b7d8f9"
        android:contentDescription="@string/outfits"
        android:scaleType="fitXY"
        android:src="@drawable/delete"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/shareOutfit"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/shareOutfit"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="#b7d8f9"
        android:contentDescription="@string/outfits"
        android:scaleType="fitXY"
        android:src="@drawable/ic_share"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/deleteOutfit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <ImageView
        android:id="@+id/overHead"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:contentDescription="@string/outfits"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shareOutfit"/>

    <ImageView
        android:id="@+id/face"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:contentDescription="@string/outfits"
        android:src="@drawable/face"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/overHead"/>

    <ImageView
        android:id="@+id/upper"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:contentDescription="@string/outfits"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/face"/>

    <ImageView
        android:id="@+id/lower"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:contentDescription="@string/outfits"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upper"/>

    <ImageView
        android:id="@+id/foot"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:contentDescription="@string/outfits"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lower"/>

</androidx.constraintlayout.widget.ConstraintLayout>